<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingTop="10dp"
                android:text="@string/app_name_full"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/txtVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="v24.08.14"
                android:textColor="#000000"
                android:textSize="14sp" /> <!-- Sử dụng 14sp để hiển thị tốt trên nhiều màn hình -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="startMainService"
                android:text="Start"
                android:padding="10dp"
                android:textSize="13dp"
                android:textAllCaps="true"
                android:textColor="@color/red"
                app:backgroundTint="@color/white"
                app:cornerRadius="11dp"
                app:iconGravity="textStart"
                app:icon="@drawable/start"
                app:iconSize="25dp"
                app:iconTint="#00C9FF" />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAirplane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="startAirplane"
                app:iconGravity="textStart"
                android:padding="10dp"
                android:textSize="13dp"
                android:text="Mobile Data"
                android:textAllCaps="true"
                android:textColor="@color/red"
                app:backgroundTint="@color/white"
                app:cornerRadius="11dp"
                app:icon="@drawable/mobiledata"
                app:iconPadding="8dp"
                app:iconSize="25dp"
                app:iconTint="#00C9FF" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKeyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="startKeyboard"
                app:iconGravity="textStart"
                android:padding="10dp"
                android:textSize="13dp"
                android:text="KEYBOARD"
                android:textAllCaps="true"
                android:textColor="@color/red"
                app:backgroundTint="@color/white"
                app:cornerRadius="11dp"
                app:icon="@drawable/keyboard"
                app:iconPadding="8dp"
                app:iconSize="25dp"
                app:iconTint="#00C9FF" />


            <TextView
                android:id="@+id/txtRoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Root"
                android:textColor="@color/red"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtADB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="ADB"
                android:textColor="@color/red"
                android:textSize="13sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:text="@string/app_desc"
        android:textColor="@color/cream"
        android:textSize="14sp" />

